@model Songrics.Web.Model.Lyric.CreateLyricInputModel

@{
    ViewData["Title"] = "Lyric";
}

<h1>Submit Lyric</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Lyric">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title of the song</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistName" class="control-label">Artist name of the song</label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumName" class="control-label">Album name</label>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoLink" class="control-label">Video embed link</label>
                <input asp-for="VideoLink" class="form-control" />
                <span asp-validation-for="VideoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongLyric" class="control-label">Song lyrics</label>
                <textarea asp-for="SongLyric" class="form-control" rows="10"></textarea>
                <span asp-validation-for="SongLyric" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Lyric" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"asp-controller="Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
